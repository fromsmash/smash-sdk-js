{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es6",
        "sourceMap": true,
        "rootDir": "./src",
        "lib": [
            "es6"
        ],
    },
    "exclude": [
        "node_modules",
        "extends",
        "**/*.spec.ts",
        "__tests__"
    ]
}